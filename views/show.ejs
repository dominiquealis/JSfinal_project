<!DOCTYPE html>
<html>
<head>

<% include partials/head %>

</head>

<!-- this is the document for a single entry that will then let you edit or delete that entry -->

<body>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">

			<div class="card">
			  <div class="card-body">
			    <h5 class="card-title"><h1><%= jobs.title %></h1></h5>
			  </div>
			  <ul class="list-group list-group-flush">
			  	<li class="list-group-item"><h2>Company: <%=jobs.business%></h2></li>
			    <li class="list-group-item"><h4>Website Source: <%=jobs.website_source%></h4></li>
			    <li class="list-group-item">Date Applied: <%=jobs.dateapplied %></li>
			    <li class="list-group-item">Location: <%=jobs.location %></li>
			  </ul>
			  <div class="card-body">


<!-- 			  	link to edit entry  -->

			    <a href="/jobs/edit/<%= jobs.id %>">Edit This Entry?</a>

<!-- 			    code to delete an entry -->
					 <form method="POST" action="/jobs/delete/<%= jobs.id %>">
            			<input type="hidden" name="_method" value="DELETE">
           				 <input type="submit" value="Delete">
        			</form>

			  </div>
			</div>	
		</div>
	</div>
	<div class="row">
		<a href="/">Go Back?</a>
	</div>

</div>

<!-- form to submit a comment -->
<div class="row">
	<div class="container">
	<div class="row">
			<div class="col-md-12">
				<div class="row">
					<h1>Comments</h1>
				</div>
		  		<form method="POST" action="/<%= jobs.id %>/createcomment">
		  				<div class="form-group">
		  					<label for="name">Comment:</label>
					    	<input type="text" class="form-control" name="notes">
					    </div>
						  <div class="form-group">
			    			<input type="submit" class="btn btn-primary value="Submit Comment">
			    		</div>
						</div>
				</form>
		</div>
	</div>
</div>
</div>

<footer>
	<% include partials/footer %>
</footer>
</body>
</html>
